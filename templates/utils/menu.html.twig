{% macro collections_menu(collections) %}
    <li class="dropdown hidden-xs">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="caret"></span></a>
        <ul class="dropdown-menu">
            {% for collection in collections %}
                {% if collection.code_name == 'favorites' %}
                    <li role="separator" class="divider"></li>
                {% endif %}
                <li id="collections-menu-{{ collection.code_name }}"{% if collection.radios|length == 0 %} class="disabled"{% endif %}>
                    {#                <a href="{{ path('app', {'c': collection.code_name}) }}" onclick="switchCollection(event, '{{ collection.code_name }}')">#}
                    {#                    {{ collection.name_FR }}#}
                    {#                </a>#}
                    <a href="{{ absolute_url('/' ~ app.request.locale ~ '/#/schedule/' ~ collection.code_name) }}">
                        {{ collection.name_FR }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </li>
{% endmacro %}

{% macro collections_mobile(collections) %}
    {% for collection in collections %}
    <li id="collections-menu-{{ collection.code_name }}" class="visible-xs{% if collection.radios|length == 0 %} disabled{% endif %}">
        <a href="{{ absolute_url('/' ~ app.request.locale ~ '/#/schedule/' ~ collection.code_name) }}">
            &rarr; {{ collection.name_FR }}
        </a>
    </li>
    {% endfor %}
{% endmacro %}
