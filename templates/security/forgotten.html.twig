{% extends 'base_site.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}{{ 'page.forgotten_password.page_title'|trans}}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3 class="mb-4">{{ 'page.forgotten_password.page_title'|trans}}</h3>

            {% if app.user %}
                <div class="alert alert-success" role="alert">
                    {{ 'connectionForm.already_logged'|trans({'%email%': app.user.email}) }}, <a href="{{ path('_logout_main') }}">{{ 'connectionForm.logout'|trans }}</a>
                </div>
            {% endif %}

            {% if email %}
            <div class="alert alert-success" role="alert">
                {{ 'page.forgotten_password.success'|trans({'%email%': email})|raw }}
            </div
            {% endif %}

            {{ form_start(form) }}
            {{ form_row(form.email) }}

            <button type="submit" class="btn btn-primary">{{ 'page.forgotten_password.submit'|trans}}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
