{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="container container-content">
    <div class="row">
        <div class="col-md-6">
            <h3>Mot de passe oublié</h3>

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes actuellement connecté en tant que {{ app.user.email}}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            {% if email %}
            <div class="alert alert-success" role="alert">
                Si un compte utilisant l'email <strong>{{ email }}</strong> a été trouvé, un message avec un lien pour réinitialiser le mot de passe lui a été envoyé.
            </div
            {% endif %}

            {{ form_start(form) }}
            {{ form_row(form.email) }}

            <button type="submit" class="btn btn-primary">Soumettre</button>
            {{ form_end(form) }}

        </div>
    </div>
</div>
{% endblock %}
