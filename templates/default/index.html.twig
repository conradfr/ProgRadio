{% block javascript_head %}
const baseUrl = '/';
const radios = {{ radios |json_encode(constant('JSON_UNESCAPED_UNICODE') b-or constant('JSON_UNESCAPED_SLASHES') b-or constant('JSON_NUMERIC_CHECK'))|raw }};
const categories = {{ categories |json_encode(constant('JSON_UNESCAPED_UNICODE') b-or constant('JSON_UNESCAPED_SLASHES') b-or constant('JSON_NUMERIC_CHECK'))|raw }};
const collections = {{ collections |json_encode(constant('JSON_UNESCAPED_UNICODE') b-or constant('JSON_UNESCAPED_SLASHES') b-or constant('JSON_NUMERIC_CHECK'))|raw }};
const radioBrowserUrl = '{{ radio_browser_url }}';
const appEnv = '{{ app.environment }}';
const gtCode = '{{ analytics }}';

const scrollToCursor = function(e) {
{#    e.preventDefault();#}
  if (window.location.href.includes(e.getAttribute('href'))) {
    document.getElementById('app').__vue__.$store.dispatch('scrollToCursor');
  }
};
{% endblock %}

