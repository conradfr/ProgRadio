{% extends 'base_site.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-12">
            <h3 class="mb-4">{{ 'page.contact.title'|trans }}</h3>

            <div class="alert alert-light mb-5" role="alert">
                <p>{{ 'page.contact.add_radio_1'|trans }}</p>
                <p>{{ 'page.contact.add_radio_2'|trans }}</p>
                <p>{{ 'page.contact.add_radio_3'|trans }}<br>
                {{ 'page.contact.add_radio_4'|trans|raw }}</p>
            </div>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}" role="alert">{{ message }}</div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
