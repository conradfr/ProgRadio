{% extends 'base.html.twig' %}

{% block title %}{{ 'page.radio.title'|trans({'%radio%': radio.name}) }}{% endblock %}
{% block description %}{{ 'page.radio.description'|trans({'%radio%': radio.name}) }}{% endblock %}


{% block head_supp %}
    {{ parent() }}
    {% if schedule|length == 0 %}
        <meta name="robots" content="noindex">
    {% endif %}
{% endblock %}

{% block body %}
<div class="container schedule-page" id="schedule-day">
    <div class="row">
        <div class="col-md-2 col-xs-12">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="schedule-day-radio center-block">
                        <img class="center-block" alt="{{ radio.name }}" style="width: 140px;" src="{{ asset('img/radio/page/' ~ radio.codename ~ '.png') }}">
                    </div>
                    <div class="schedule-day-radio center-block text-center">
                        <a class="text-center" href="{{ path('app') }}#/radio/{{ radio.codeName }}?play=1">
                                {{ 'page.radio.play'|trans({'%radio%': radio.name}) }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-10 col-xs-12">
            <div class="title">
                <div class="row">
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        <h5>{{ date |localizeddate('full', 'none', app.request.locale, timezone) | capitalize }}</h5>
                    </div>
                    <div class="col-md-6 col-sm-12 col-xs-12 schedule-page-datenav text-right">
                        ←&nbsp;
                        {% if has_prev %}
                            <a href="{{ path('radio', {'codename': radio.codeName, 'date': prev_date |date("Y-m-d") }) }}">{{ prev_date |localizeddate('short', 'none', app.request.locale, timezone) | capitalize }}</a>
                        {% else %}
                            {{ prev_date |localizeddate('short', 'none', app.request.locale, timezone) | capitalize }}
                        {% endif %} |
<!--                        | <a href="{{ path('radio', {'codename': radio.codeName, 'date': 'now' |date('Y-m-d') }) }}">{{ 'page.radio.today'|trans }}</a> |-->
                        {% if has_next %}
                            <a href="{{ path('radio', {'codename': radio.codeName, 'date': next_date |date('Y-m-d')}) }}">{{ next_date |localizeddate('short', 'none', app.request.locale, timezone) | capitalize }}</a>
                        {% else %}
                            {{ next_date |localizeddate('short', 'none', app.request.locale, timezone) | capitalize }}
                        {% endif %}
                        &nbsp;→
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <a href="{{ absolute_url('/' ~ app.request.locale ~ '/#/schedule/' ~ radio.collection.codeName) }}">{{ 'page.radio.back'|trans }}</a>
                    </div>
                </div>
            </div>

            <div class="schedule-day-shows">
            {% for show in schedule %}
                <div class="media">
                {% if show.picture_url %}
                    <div class="media-left">
                        <img alt="" class="media-object" style="width: 64px"
                             src="{{ asset('media/cache/page_thumb/media/program/' ~ show.picture_url) }}">
                    </div>
                {% endif %}
                    <div class="media-body">
                        <h6 class="media-heading show-title">{{ show.start_at | localizeddate('none', 'short', 'fr_FR', timezone) | capitalize }}-{{ show.end_at | localizeddate('none', 'short', 'fr_FR', timezone) | capitalize }} - {{ show.title }}</h6>
                        {% if show.host %}
                            <div class="show-host"> {{ show.host }}</div>
                        {% endif %}
                        {% if show.description %}
                            <p class="show-description">{{ show.description | nl2br  }}</p>
                        {% endif %}
                    </div>

                {% if show.sections is defined %}
                    <div class="sections">
                    {% for section in show.sections %}
                        <div class="media">
                            {% if section.picture_url %}
                                <div class="media-left">
                                    <img alt="" class="media-object" style="width: 48px"
                                         src="{{ asset('media/cache/page_thumb/media/program/' ~ section.picture_url) }}">
                                </div>
                            {% endif %}
                            <div class="media-body">
                                <h6 class="media-heading show-title">{{ section.start_at | localizeddate('none', 'short', 'fr_FR', timezone) | capitalize }} - {{ section.title }}</h6>
                                {% if section.presenter %}
                                    <div class="show-host">{{ section.presenter }}</div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                {% endif %}
            </div>
            {% else %}
                <div class="alert alert-warning" role="alert">{{ 'page.radio.no_schedule'|trans }}</div>
            {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
