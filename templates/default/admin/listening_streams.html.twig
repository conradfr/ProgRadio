{% extends 'default/admin/listening_base.html.twig' %}

{% import "default/admin/macro/format.html.twig" as format %}

{% set active_tab = 'streams' %}

{% block tab_content %}
    <table class="table schedule-stats table-striped table-bordered">
        <tr>
            {% for i in 0..4 %}
                <th style="width: 20%">
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-3">Sess.</div>
                        <div class="col-md-3">Moy.</div>
                        <div class="col-md-3">Total</div>
                    </div>
                </th>
            {% endfor %}
        </tr>

        {% for entries in streams_listening|batch(5) %}
            <tr>
                {% for one in entries %}
                    <td>
                        {% if one != 'empty' %}
                            <div class="col-md-3"><img title="{{ one.name }}" alt="{{ one.name }}"
                                {% if one.img is null %}
                                   src="{{ asset('/img/stream-placeholder.png') }}"
                                {% else %}
                                    src="{{ asset('media/stream/' ~ one.img) }}"
                                {% endif %}></div>
                            <div class="col-md-3">{{ one.total_sessions }}</div>
                            <div class="col-md-3">
                                {% if (one.total_sessions > 0) %}
                                    {{ format.secondsToMinutes(one.total_seconds / one.total_sessions) }}
                                {% else %}
                                    0
                                {% endif %}
                            </div>
                            <div class="col-md-3">{{ format.secondsToMinutes(one.total_seconds) }}</div>
                        {% endif %}
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
{% endblock %}
