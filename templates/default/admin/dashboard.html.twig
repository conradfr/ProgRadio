{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% import _self as self %}

{% macro trend(value) %}
    {% set class = '' %}
    {% set sign = '' %}
    {% if value > 0 %}
        {% set class = 'trend-up' %}
        {% set sign = '+' %}
    {% elseif value < 0 %}
        {% set class = 'trend-down' %}
    {% endif %}

    <span class="trend {{ class }}">{{ sign }}{{ value }}</span>
{% endmacro %}

{% macro nb(value, zerowarning) %}
    {% set class = '' %}
    {% if value == 0 and zerowarning == true %}
        {% set class = 'trend-zero' %}
    {% endif %}

    <span class="trend {{ class }}">{{ value }}</span>
{% endmacro %}

{% block body %}
<div id="admin" class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <table class="table schedule-stats table-striped table-bordered">
            {% for radio, entries in stats %}
                {% if loop.index == 1 %}
                <tr>
                    <th></th>
                    {% for entry in entries %}
                        <th>{{ entry.day | date('D d/m/Y') }}</th>
                    {% endfor %}
                </tr>
                <tr>
                    <th></th>
                    {% for entry in entries %}
                        <th>
                            <div class="row">
                                <div class="col-md-6">Programmes</div>
                                <div class="col-md-6">Chroniques</div>
                            </div>
                        </th>
                    {% endfor %}
                </tr>
                {% endif %}
            <tr>
                <td class="radio-header">
                    <img src="{{ asset('img/radio/schedule/' ~ radio ~ '.png') }}">
                </td>
                {% for entry in entries %}
                <td>
                    <div class="row">
                        <div class="col-md-offset-1 col-md-2">{{ self.nb(entry.total, true) }}</div>
                        <div class="col-md-3">{{ self.trend(entry.diff) }}</div>
                        <div class="col-md-offset-1 col-md-2">{{ self.nb(entry.section_total, false) }}</div>
                        <div class="col-md-3">{{ self.trend(entry.section_diff) }}</div>
                    </div>
                </td>
                {% endfor %}
            </tr>
            {% endfor %}
            </table>
        </div>
    </div>
</div>
{% endblock %}
