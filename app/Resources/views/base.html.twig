<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Toutes les grilles de programmes radio et écoute en ligne{% endblock %}</title>
    <meta name="description" content="{% block description %}Ecoute en ligne et les programmes en France.{% endblock %}" />
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="icon" type="image/png" href="{{ asset('favicon.png') }}" />

    <link href="{{ asset('build/css/main.css') }}" rel="stylesheet">
    <style>
        {% block stylesheets %}
        {% endblock %}
    </style>

    <script type="text/javascript">
        {% block javascript_head %}
            // placeholder
            const scrollToCursor = function() {};
        {% endblock %}
    </script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body{% block bodysupp %}{% endblock %}>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
                <a class="navbar-brand" href="{{ path('homepage') }}" onclick="scrollToCursor(event)">
                    <div class="navbar-brand-name">
                        <img src="{{ asset('img/logo.png') }}" srcset="{{ asset('img/logo.svg') }}" alt="Programmes radios" height="24px" width="30px">Programmes Radio
                    </div>
                </a>
        </div>

        <div class="collapse navbar-collapse" id="navbar">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="{{ path('faq') }}">Faq</a></li>
                <li><a href="{{ path('contact') }}">Contact</a></li>
                <li><a href="https://play.google.com/store/apps/details?id=io.programmes_radio.www.progradio"><img src="{{ asset('img/icon-googleplay.png') }}" alt="Android app"></a></li>
            </ul>
        </div>

    </div>
</nav>

{% block body %}{% endblock %}

<footer class="footer">
    <div class="container">
        <div class="row">
            {% block footer %}
                <div class="col-md-12 col-xs-12"><p class="text-center">©{{ "now"|date("Y") }} <a href="http://www.funkybits.fr">FunkyBits</a>&nbsp;&nbsp;<small>(<a href="https://github.com/conradfr/progradio">sources</a>)</small></p></div>
            {% endblock %}
        </div>
        {#dsfd#}
    </div>
</footer>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="{{ asset('js/bootstrap.min.js') }}"></script>
{% block javascripts %}{% endblock %}
{% if app.environment == 'prod' %}
<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', '{{ analytics }}', 'auto');
    ga('send', 'pageview');
</script>
{% endif %}
</body>
</html>
